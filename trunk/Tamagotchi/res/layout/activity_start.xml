<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/startup_screen_bg"
    android1:onClick="onClick" >

    <LinearLayout
        android1:id="@+id/linearLayout1"
        android1:layout_width="wrap_content"
        android1:layout_height="450px"
        android1:layout_alignParentTop="true"
        android1:layout_centerHorizontal="true"
        android1:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android1:id="@+id/LinearLayout01"
        android1:layout_width="wrap_content"
        android1:layout_height="525px"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true"
        android1:orientation="vertical" >
    </LinearLayout>

    <ImageButton
        android1:id="@+id/btnStart"
        android1:layout_width="349px"
        android1:layout_height="105px"
        android1:layout_below="@+id/linearLayout1"
        android1:layout_centerHorizontal="true"
        android1:background="@android:color/transparent"
        android1:onClick="onClick"
        android1:scaleType="centerInside"
        android1:src="@drawable/selector_start" />

    <ImageButton
        android1:id="@+id/btnHighscore"
        android1:layout_width="349px"
        android1:layout_height="105px"
        android1:layout_alignLeft="@+id/btnStart"
        android1:layout_below="@+id/LinearLayout01"
        android1:layout_marginTop="30dp"
        android1:background="@android:color/transparent"
        android1:onClick="onClick"
        android1:scaleType="centerInside"
        android1:src="@drawable/selector_highscore" />

</RelativeLayout>